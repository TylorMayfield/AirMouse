{
  "name": "airmouse-desktop",
  "version": "1.0.0",
  "description": "Desktop app: server (pairing QR + Socket.IO) and mouse control in one process",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "pkg . --output dist/airmouse-desktop --targets node18-win-x64",
    "build:win": "pkg . --output dist/airmouse-desktop.exe --targets node18-win-x64",
    "build:mac": "pkg . --output dist/airmouse-desktop --targets node18-macos-x64,node18-macos-arm64",
    "build:linux": "pkg . --output dist/airmouse-desktop --targets node18-linux-x64",
    "build:all": "pkg . --output dist/airmouse-desktop --targets node18-win-x64,node18-macos-x64,node18-macos-arm64,node18-linux-x64"
  },
  "pkg": {
    "assets": "pair.html",
    "outputPath": "dist"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "pkg": "^5.8.0"
  }
}
